@using System.Text.Json
@using Vulpes.Zinc.Web.Routing
@using Vulpes.Zinc.Web.Pages.Components
@model TicketOverviewModel
@{
}

<hr class="hr" />
<div>
    <div class="row">
        <div class="col-auto">
            <a href="@ZincRoute.Ticket(Model.Project.Shorthand, Model.Ticket.Key)">
                <p>@Model.Ticket.Title</p>
            </a>
        </div>

        <div class="col">
            <p>@string.Join(", ", Model.Ticket.Labels)</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>@Model.Ticket.Description</p>
        </div>
    </div>
</div>